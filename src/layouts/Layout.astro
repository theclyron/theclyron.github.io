---
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta property="og:site_name" content="Clyron" />
        <meta property="og:image" content="https://clyron.is-a.dev/logo-sm.png">
        <meta name="title" content="Clyron's Website" />
		<meta name="description" content="" />
		<link rel="icon" type="image/svg+xml" href="https://clyron.is-a.dev/logo-sm.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.7.2/css/all.css">
        <link rel="stylesheet" href="../src/components/style.css" type="text/css">
		<title>Clyron</title>
        <style is:global>
            a {
            text-decoration: underline;
            }
        </style>
	</head>
	<body>
        <div class="grid justify-center" id="logo">
            <div class="size-36 p-4"><img src="https://clyron.is-a.dev/logo.png"></div>
          </div>
          <div class="grid justify-center" id="toptext">
         <div class="sm:text-2xl italic">I am just a semi-average internet user~</div>
         </div>
         <div class="box-border border-2 rounded-3xl p-4 sm:ml-10 sm:mr-10 md:ml-15 md:mr-15 lg:ml-20 lg:mr-20 mt-4">
          <div class="grid justify-center" id="navbar">
             <div class="text-lg m-1"><a href="/">Home</a> ・ <a href="/projects">Projects</a> ・ <a href="/socials">Socials</a> ・ <a href="/blog">Blog</a></div>
          </div>
		<slot />
        <div><noscript><div class="text-base font-semibold italic m-1">⚠️ JavaScript is disabled, some website functionality may be limited</div></noscript></div>
	</body>
</html>
