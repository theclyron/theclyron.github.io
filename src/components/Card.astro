---
interface Props {
	name: string;
	icon: string;
	type: string;
	desc: string;
	btn_action: string;
	btn_href: string;
	rel: string;
}

const { name, icon, type, desc, btn_action, btn_href, rel } = Astro.props;
---
<div class="box-border border-2 rounded-2xl p-4 m-4">
	<div class="text-2xl font-bold"><i class={icon}></i> {name}</div>
	<div class="text-lg">{type}</div>
	<div class="text-base font-light italic">{desc}</div>
	<div class="text-base"><a class="button" href={btn_href} rel={rel}>{btn_action}</a></div>
   </div>